@* File: Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BizFlow - @ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Sidebar collapse */
        #sidebar-wrapper {
            width: 250px;
            transition: all 0.3s;
        }

        #wrapper.sidebar-collapsed #sidebar-wrapper {
            width: 70px;
        }

            #wrapper.sidebar-collapsed #sidebar-wrapper .menu-text {
                display: none;
            }

            #wrapper.sidebar-collapsed #sidebar-wrapper .list-group-item i {
                margin-right: 0;
                text-align: center;
                width: 100%;
            }

        #page-content-wrapper {
            transition: all 0.3s;
        }

        #wrapper.sidebar-collapsed #page-content-wrapper {
            margin-left: 70px;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-dark border-end" id="sidebar-wrapper">
            <div class="sidebar-heading d-flex align-items-center justify-content-between p-3">
                <span class="brand-text text-white">BizFlow</span>
                <button class="btn btn-sm btn-light" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <div class="list-group list-group-flush">
                <!-- HR Module -->
                <a class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center"
                   data-bs-toggle="collapse" href="#hrMenu">
                    <i class="bi bi-people-fill me-2"></i>
                    <span class="menu-text">HR</span>
                </a>
                <div class="collapse ps-4" id="hrMenu">
                    <a href="/Employees" class="list-group-item bg-dark text-white border-0 ps-4">
                        <i class="bi bi-person-fill me-1"></i> Employees
                    </a>
                    <a href="#" class="list-group-item bg-dark text-white border-0 ps-4">
                        <i class="bi bi-building me-1"></i> Departments
                    </a>
                </div>

                <!-- Accounts Module -->
                <a class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center"
                   data-bs-toggle="collapse" href="#accountsMenu">
                    <i class="bi bi-cash-stack me-2"></i>
                    <span class="menu-text">Accounts</span>
                </a>
                <div class="collapse ps-4" id="accountsMenu">
                    <a href="#" class="list-group-item bg-dark text-white border-0 ps-4">
                        <i class="bi bi-file-earmark-text me-1"></i> Invoices
                    </a>
                    <a href="#" class="list-group-item bg-dark text-white border-0 ps-4">
                        <i class="bi bi-wallet2 me-1"></i> Expenses
                    </a>
                </div>

                <!-- Employment Management -->
                <a class="list-group-item list-group-item-action bg-dark text-white d-flex align-items-center"
                   data-bs-toggle="collapse" href="#employmentMenu">
                    <i class="bi bi-briefcase-fill me-2"></i>
                    <span class="menu-text">Employment</span>
                </a>
                <div class="collapse ps-4" id="employmentMenu">
                    <a href="#" class="list-group-item bg-dark text-white border-0 ps-4">
                        <i class="bi bi-person-plus-fill me-1"></i> Recruitment
                    </a>
                    <a href="#" class="list-group-item bg-dark text-white border-0 ps-4">
                        <i class="bi bi-journal-check me-1"></i> Onboarding
                    </a>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom px-4">
                <span class="navbar-brand">Dashboard</span>
            </nav>

            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
        // Sidebar collapse toggle
        const sidebarToggle = document.getElementById('sidebarToggle');
        const wrapper = document.getElementById('wrapper');

        sidebarToggle.addEventListener('click', function () {
            wrapper.classList.toggle('sidebar-collapsed');
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>