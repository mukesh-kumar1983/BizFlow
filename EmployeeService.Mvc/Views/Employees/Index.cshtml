@model EmployeeService.Mvc.ViewModels.EmployeeListVm


<h2>Employees</h2>

<a asp-action="Create" class="btn btn-primary mb-2">Add Employee</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var e in Model.Employees)
        {
            <tr>
                <td>@e.FullName</td>
                <td>@e.Email</td>

                <!-- 👇 ADD LINKS HERE -->
                <td>
                    <a asp-action="Details" asp-route-id="@e.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@e.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@e.Id"
                       onclick="return confirm('Are you sure you want to delete this employee?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

